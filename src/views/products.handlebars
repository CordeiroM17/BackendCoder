<header class="products__header">
    <h2>Bienvenido {{firstName}}</h2>
    <nav>
        <ul>
            <li>
                <a class="profile__btn--secret" href='/carts/{{cart}}'>Cart<a></a>
            </li>
            <li>
                <a class="profile__btn--secret" href='/auth/current'>Ver perfil<a></a>
            </li>
            <li>
                <a class="profile__btn--logout" href="/auth/logout">Logout</a>
            </li>
        </ul>
    </nav>
</header>
<main class="main__products">
    <section class="card__container">
        {{#each payload}}
            <div class="card">
                <img src="{{this.thubmail}}" alt="image"/>
                <div class="card__data">
                    <div class="card__title">
                        <h2>{{this.title}}</h2>
                    </div>
                    <div class="card__description">
                        <p>{{this.description}}</p>
                    </div>
                    <div class="card__btn">
                        <p>${{this.price}}</p>
                        <button type="button" class="btn-add-to-cart" value="{{../url}}/api/carts/{{../cart}}/products/{{this.id}}">Add to cart</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </section>
    <section class="pagination__container">
        <div class="pagination__btn">
            {{#if hasPrevPage}}
                <a href='{{url}}/products?page={{prevPage}}'>Prev</a>
            {{/if}}
            <p>{{page}}</p>
            {{#if hasNextPage}}
                <a href='{{url}}/products?page={{nextPage}}'>Next</a>
            {{/if}}
        </div>
    </section>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    let btnAddToCart = document.querySelectorAll('.btn-add-to-cart');

    function setAddToCart(btnAddToCart) {
        for (let btn of btnAddToCart) {
            btn.addEventListener('click', async () => {
                const response = await fetch(btn.value, {
                    method: 'post'
                })

                if(response.ok) {
                    Swal.fire({
                        icon: 'success',
                        title: 'El producto fue a√±adido al carrito con exito',
                    });
                }
            });
        }
    }

    
    setAddToCart(btnAddToCart);
</script>