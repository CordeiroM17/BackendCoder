<main class="main__container">
    {{#if cartEmpty}}
        <section class="section__cart">
            <h1>Cart</h1>
            <h2>No hay productos en el cart</h2>
            <a class="btn__back" href='/products'>Haga click para regresar</a>
        </section>
    {{else}}
        <section class="section__cart">
            <h1>Cart</h1>
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody id="dinamic-product-list">
                        {{#each productsMap}}
                        <tr>
                            <td>
                                <img src="{{this.thubmail}}"/>
                            </td>
                            <td>{{this.title}}</td>
                            <td>{{this.quantity}}</td>
                            <td>{{this.price}}</td>
                        </tr>
                        {{/each}}
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Total: </td>
                            <td>{{totalAmount}}</td>
                        </tr>
                    </tbody>
                </table>  
            </div>
            <div class="cart__form__container">
                <form class="purchase__form" action="/api/carts/{{cartId}}/purchase" method="post">
                    <div class="purchase__form--container">
                        <label for="numero_tarjeta">Número de Tarjeta:</label>
                        <input type="text" id="numero_tarjeta" name="numero_tarjeta" required>

                        <label for="nombre_titular">Nombre del Titular:</label>
                        <input type="text" id="nombre_titular" name="nombre_titular" required>
                    </div>

                    <div class="purchase__form--container">
                        <label for="direccion">Dirección de Envío:</label>
                        <input type="text" id="direccion" name="direccion" required>

                        <label for="codigo_postal">Código Postal:</label>
                        <input type="text" id="codigo_postal" name="codigo_postal" required>
                    </div>

                    <input class="form__submit btn__purchase" type="submit" value="Realizar Compra">
                </form>
            </div>
        </section>    
    {{/if}} 
</main>